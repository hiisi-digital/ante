{
  "name": "@loru/ante",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "exports": "./mod.ts",
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fmt": "jsr:@std/fmt@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "#core": "./core/mod.ts",
    "#git": "./git/mod.ts",
    "#cli": "./cli/mod.ts"
  },
  "lint": {
    "include": ["**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-await-in-loop",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "no-console"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "*.md"]
  },
  "tasks": {
    "test": "deno test --allow-read --allow-env --allow-run",
    "test:watch": "deno test --allow-read --allow-env --allow-run --watch",
    "test:coverage": "deno test --allow-read --allow-env --allow-run --coverage=coverage/",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check mod.ts",
    "all": "deno task fmt && deno task lint && deno task check && deno task test",
    "prepublish": "deno task all",
    "codegen": "deno run --allow-read --allow-write scripts/codegen.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "core/mod.ts",
      "core/config.ts",
      "core/header.ts",
      "core/formatter.ts",
      "core/contributors.ts",
      "git/mod.ts",
      "git/hooks.ts",
      "git/history.ts",
      "cli/mod.ts",
      "cli/commands/init.ts",
      "cli/commands/check.ts",
      "cli/commands/fix.ts",
      "cli/commands/add.ts",
      "hooks/pre-commit",
      "hooks/functions.sh",
      "schema/config.schema.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/",
      "scripts/",
      ".githooks/"
    ]
  }
}
